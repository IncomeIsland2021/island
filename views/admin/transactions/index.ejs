                          <span>Datatable</span>
                      </div>
                  </div>
                 
              </div>
              <!-- row -->


              <div class="row">
                 
        <div class="col-12">
                      <div class="card">
                          <div class="card-header">
                              <h4 class="card-title">Transaction List</h4>
                          </div>
                          <div class="card-body">
                              <div class="table-responsive">
                               
                                  <table id="example3" class="display" style="min-width: 845px">
                                      <thead>
                                          <tr>
                                              <th width="20%">Amount</th>
                                              <th width="30%">Payment hash</th>
                                              <th width="30%">Wallet address</th>
                                              <th width="20%">Status</th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                       <% orders.forEach(function(order,index){%>

                                        <tr>
                                            <td><%=order.total %></td>
                                            <td>
                                                <a id="hash" href="https://ropsten.etherscan.io/tx/<%=order.hash %>" target="_blank">
                                                    <%=order.hash %>
                                                </a>
                                               
                                            
                                            </td>
                                            <td>
                                                <a href="https://ropsten.etherscan.io/address/<%=order.wallet_address %>" target="_blank">
                                                    <%=order.wallet_address %> 
                                                </a>
                                            </td>
                                            <td><span class="badge badge-warning">Success</span></td>
                                        </tr>

                                       <% })    %>
                                          
                                         
                                     
                                         
                                         
                                        
                                      </tbody>
                                  </table>
                              </div>
                          </div>
                      </div>
                  </div>
        
      </div>
          </div>
      </div>
